<Window x:Class="PSM_8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSM_8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button x:Name="startButton" Width="100" Height="30"  Content="Start" Click="StartButton_Click" />
            <Button x:Name="stopButton" Width="100" Height="30"  Content="Stop" Click="StopButton_Click" />
            <Button x:Name="resetButton" Width="100" Height="30"  Content="Reset" Click="ResetButton_Click" />
            <TextBox x:Name="textBox" Width="100" Height="30"/>

        </StackPanel>
        <Canvas x:Name="canvas" DockPanel.Dock="Bottom" />
    </DockPanel>
</Window>

