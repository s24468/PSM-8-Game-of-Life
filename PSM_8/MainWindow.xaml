<Window x:Class="PSM_8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSM_8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button x:Name="StartButton" Width="100" Height="30" Content="Start" Click="StartButton_Click"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinWidth="80" MinHeight="25" />
            <Button x:Name="StopButton" Width="100" Height="30" Content="Stop" Click="StopButton_Click"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinWidth="80" MinHeight="25" />
            <TextBox x:Name="RulesTextBox" Width="200"
                     HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinWidth="150" MinHeight="25" />
            <TextBox x:Name="InitializeTextBox" Width="200"
                     HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinWidth="150" MinHeight="25" />
        </StackPanel>
        <Canvas x:Name="canvas" DockPanel.Dock="Bottom"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    </DockPanel>
</Window>